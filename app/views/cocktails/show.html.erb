<h1><%= @cocktail.name %>
<%= link_to "All cocktails", cocktails_path %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
<% @cocktail.doses.each do |dose| %>
<%= dose.description + " and " + dose.ingredient.name %>
<% end %>

<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
